@model QuestionViewModel

<h1>Edycja pytania o id: @Model.Id</h1>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Content">Treść pytania:</label>
        <input type="text" id="Content" name="Content" value="@Model.Content" />
    </div>

    <div class="form-row">

        <div class="form-group">
            <label asp-for="Area">Obszar pytania:</label>
            <input asp-for="Area" />
            <span asp-validation-for="Area" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Difficulty">Skala trudności</label>
            <input asp-for="Difficulty" />
            <span asp-validation-for="Difficulty" class="text-danger"></span>
        </div>

    </div>

