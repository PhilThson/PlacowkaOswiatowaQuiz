                </td>
                <td>
                    @Html.DisplayFor(item => question.Area)
                </td>
                <td>
                    @Html.DisplayFor(item => question.Difficulty)
                </td>
                <td>
                    <div>
                        <a class="btn btn-primary" asp-controller="Customers" asp-action="Edit" asp-route-id="@question.Id">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                        <a class="btn btn-danger" asp-controller="Customers" asp-action="Delete" asp-route-id="@question.Id">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </div>
