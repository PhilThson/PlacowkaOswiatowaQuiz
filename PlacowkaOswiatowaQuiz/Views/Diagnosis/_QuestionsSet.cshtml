@model QuestionsSetViewModel

<br />
<fieldset class="p-2">
    <legend class="w-auto">
        <b>Zestaw pytań</b>
    </legend>
    <div class="container">
        <div id="divAlertArea">
            <partial name="~/Views/UIComponents/_bootstrapAlert.cshtml" />
        </div>
        <input id="questionsSetId" hidden value="@Model.Id" />
        <div id="questionsSetRatings" style="visibility:hidden">
            @foreach (var rating in Model.QuestionsSetRatings)
            {
                <input hidden id="@rating.Id" name="questionsSetRating" value="@rating.RatingDescription" />
            }
        </div>
        <div class="container rounded p-2">
            <div class="row">
                <div class="col-12 pb-4">
                    <div class="row my-1">
                        <div class="col-12">
                            <b>@Html.DisplayNameFor(m => m.SkillDescription)</b>
                        </div>
                        <div class="col-12">
                            <p class="text-start fst-italic">@Html.DisplayFor(m => m.SkillDescription)</p>
                        </div>
                    </div>
                    <div class="row my-1">
                        <div class="col-12">
                            <b>@Html.DisplayNameFor(m => m.Area)</b>
                        </div>
                        <div class="col-9">
                            <p class="text-start fst-italic">@Html.DisplayFor(m => m.Area.Description)</p>
                        </div>
                    </div>
                    <div class="row my-1">
                        <div class="col-12">
                            <b>@Html.DisplayNameFor(m => m.Difficulty)</b>
                        </div>
                        <div class="col-12">
                            <p class="text-start fst-italic">@Html.DisplayFor(m => m.Difficulty.Description)</p>
                        </div>
                    </div>
                </div>
                <div class="col-10 offset-lg-1">
                    @*d-flex justify-content-between align-items-center*@
                    <div class="container d-flex justify-content-between">
                        <h4 class="mb-3">
                            <span class="text">Pytania:</span>
                        </h4>
                        <span class="text-muted fst-italic">Co robi nauczyciel:</span>
                    </div>
                    <ul class="list-group mb-3">
                        @foreach (var question in Model.Questions)
                        {
                            <li class="list-group-item list-group-item-dark d-flex justify-content-between">
                                <div class="checkbox me-auto">
                                    <label>
                                        <input type="checkbox" name="isAnswered" value="is-answered" />
                                            @question.Content
                                    </label>
                                </div>
                                <p class="text-muted pt-2 fst-italic">@question.Description</p>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="row">
                @await Html.PartialAsync("_Attachments", Model.Attachments)
            </div>
        </div>
    </div>
</fieldset>

<style>
    legend {
        border: 3px solid #1F497D;
    }

</style>
