@model IEnumerable<DifficultyViewModel>

<div class="panel-heading">
    <div class="row">
        <div class="col-md-7">
            <h5><b>Lista skal trudności</b></h5>
        </div>
    </div>
</div>
<div id="divAlertArea">
    <partial name="~/Views/UIComponents/_bootstrapAlert.cshtml" />
</div>

<div class="panel-body scroll panel-height">
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th></th>
                @*<th></th>*@
            </tr>
        </thead>

        <tbody>

            @foreach (var diff in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(item => diff.Id)</td>
                    <td>@Html.DisplayFor(item => diff.Name)</td>
                    <td>@Html.DisplayFor(item => diff.Description)</td>
                    <td>
                        <div>
                            <a class="btn btn-sm btn-info" asp-controller="Dictionary" asp-action="EditDifficulty"
                               asp-route-id="@diff.Id">
                                Edytuj
                            </a>
                            @*<a class="btn btn-sm btn-danger" asp-controller="Dictionary" asp-action="DeleteDifficulty" asp-route-id="@diff.Id">
                                Usuń
                            </a>*@
                        </div>
                    </td>
                </tr>

            }

        </tbody>
    </table>
</div>

