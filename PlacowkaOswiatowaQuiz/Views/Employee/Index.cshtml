@model IEnumerable<EmployeeViewModel>
@{ViewData["Title"] = "Pracownicy";}

<div class="row pb-3">
    @foreach (var employee in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;">
                    @*<div class="card">*@
                    @*<img src="@product.ImageUrl" class="card-img-top rounded"/>*@
                    <div>
                        <div class="pl-1">
                            <p class="card-title h5 text-primary">@employee.FirstName @employee.LastName</p>
                            <p class="card-title text-info">e-mail: <b>@employee.Email</b></p>
                        </div>
                        <div class="pl-1">
                            <p>Zarobki: <b>@string.Format("{0:#.00}", Convert.ToDecimal(employee.Salary))</b> PLN</p>
                        </div>
                        <div class="pl-1">
                            <p>Data urodzenia: <b>@employee.DateOfBirth.Value.ToString("yyyy-MM-dd")</b></p>
                        </div>
                    </div>
                    @*</div>
                        <div>*@
                    @*                        <a asp-action="Details" class="btn-primary form-control" asp-route-productId="@product.Id">
                                Details
                            </a>
                        </div>*@
                </div>
            </div>
        </div>
    }
</div>