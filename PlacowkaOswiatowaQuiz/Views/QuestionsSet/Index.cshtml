@model IEnumerable<QuestionsSetViewModel>

<div class="panel panel-hash">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-5">
                <button class="btn btn-sm btn-danger" onclick="AddEdit(0)">Dodaj nowy</button>
            </div>
            <div class="col-md-7">
                <h5><b>Lista Zestawów pytań</b></h5>
            </div>
        </div>
    </div>
    <div id="divAlertArea">
        <partial name="~/Views/UIComponents/_bootstrapAlert.cshtml" />
    </div>
    <div class="panel-body scroll panel-height">
        <table id="tblFU" class="CustomColorTable" border="1">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                    <th>@Html.DisplayNameFor(m => m.SkillDescription)</th>
                    <th>@Html.DisplayNameFor(m => m.Area)</th>
                    <th>@Html.DisplayNameFor(m => m.Difficulty)</th>
                    <th>@Html.DisplayNameFor(m => m.AttachmentFile.Name)</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SkillDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Area)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Difficulty)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttachmentFile.Name)
                        </td>
                        <td>
                            <a href='#' class='btn btn-success btn-sm' onclick="DownloadFile('@item.Id');">Download</a>
                        </td>
                        <td>
                            <a href='#' class="btn btn-sm btn-info" onclick="Details(@item.Id)">View</a>
                        </td>
                        <td>
                            <a class="btn btn-sm btn-danger" onclick="Delete(@item.Id)">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .panel-heading {
        padding: 0px 0px 0px 5px;
    }

    .panel-body {
        padding: 5px;
    }

    .h4 {
        margin-top: 1px;
        margin-bottom: 1px;
    }
</style>